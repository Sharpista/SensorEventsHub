@inject HttpClient Http;
@using SensorEventsHub.UI.Client.Models

@if(eventoSul == null)
{
    <p><em>Loading...</em></p>
}
else
{
<div class="container-fluid">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Sensor</th>
                <th scope="col">Quantidade</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>brasil.sensor.sul</td>
                <td>@ValorSul()</td>
            </tr>

        </tbody>
    </table>
</div>


    
}

@code {
    private Evento [] eventoSul;


    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected async Task LoadData()
    {
        eventoSul = await Http.GetJsonAsync<Evento []>("http://localhost:55897/api/sensores/sul");
    }
    private int ValorSul()
    {
        var count = 0;

        foreach(var item in eventoSul)
        {
            count += int.Parse(item.Valor);
        }

        return count;
    }
}

